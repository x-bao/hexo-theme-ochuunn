meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1.0')
meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
link(rel='alternate', href = theme.url, hreflang='zh-Hans')

if theme.google_verification
  meta(name="google-site-verification", content = theme.google_verification)

if theme.baidu_verification
    meta(name="baidu-site-verification", content = theme.baidu_verification)

if config.author
  meta(name='author', content = config.author)

if config.keywords
  meta(name='keywords', content = config.keywords)

if config.description
  meta(name='description', content = config.description)

if theme.rss
  link(rel='alternative', href = theme.rss, title = config.title, type='application/atom+xml')

if theme.favicon
  link(rel="icon", href = theme.favicon)

include ../plugins/baidu.pug

block head

!= css('css/main')
!= js('js/jquery-3.1.1.min.js')
!= js('js/fancybox/jquery.fancybox.min.js')
