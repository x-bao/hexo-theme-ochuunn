.index-wrapper
  display: -webkit-box
  display: -webkit-flex
  display: flex
  width: 100%
  height: 100vh

  -webkit-box-pack: center
  -webkit-justify-content: center
  justify-content: center

  -webkit-box-align: center
  -webkit-align-items: center
  align-items: center

  headerparticles-oli-wrapper
    z-index: 10

#particles-oli-wrapper
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  width: 100%
  // z-index: -1

.head
.main
.foot
  margin: 0 auto
  width: 720px

.head
.foot
  padding: 0 50px
  height: 120px
  background-color: #399c9c
  line-height: (@height)
  box-sizing: border-box
  text-shadow: 0 1px 0 rgba(0, 0, 0, .125)
  
.foot
  line-height: 1
  display: flex
  justify-content: center
  text-align: center
  align-items: center
  text-shadow: 0 1px 0 rgba(0, 0, 0, .3)
  
  .link
    color: #fff
    &:hover
      text-decoration: underline

.index-full-page
  overflow: hidden

.foot-theme
  margin-top: 1rem

.head-title
  font-size-rem(30)
  font-weight: normal
  color: #FFFFFF

  > a
    color: #FFFFFF

.head-nav__item
  display: inline-block
  margin-left: 20px

.head-nav__link
  color: #fff

  &:hover
    color: #f0f0f0
    text-decoration: underline

.main
  margin-top: 30px
  margin-bottom: 30px

.archive-title
  margin: 1.6em
  text-align: center
  // 1.6 * 16
  font-size-rem(25.6)
  font-weight: normal

.comments
  margin: 30px 0
  padding: 10px 50px
  background-color: #FFFFFF
  border: 1px solid $border-color

.foot
  margin-bottom: 30px

.foot-copy
  text-align: center
  color: #fff
  font-size-rem(12)

.page-menu__item
  display: inline-block

.page-menu__link
  color: #FFFFFF
  font-size-rem(30)

.page-menu__link--disabled
  color: #f0f0f0

::-webkit-scrollbar {
  width: 5px
  height: 5px
  background-color: #f5f5f5
} 

/* 定义滚动条轨道的内阴影+圆角 */
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 8px rgba(0, 0, 0, .3)
  background-color: #f5f5f5
}

/* 定义滑块的内阴影+圆角 */
::-webkit-scrollbar-thumb {
  -webkit-box-shadow: inset 0 0 8px rgba(0, 0, 0, .3)
  background-color: $color-green
}

.right p
  text-align: right

.reward,
.comments,
.post
  transition: all .3s
  // box-shadow: 0 1px 3px 0 rgba(0,0,0,0.2), 0 1px 1px 0 rgba(0,0,0,0.14), 0 2px 1px -1px rgba(0,0,0,0.12)

  &:hover
    box-shadow: 0 1px 5px rgba(50, 50, 50, 0.2)
    border-color: transparent

iframe
  width: 100%
  min-height: 250px

summary
  outline: none
  display: inline-block
summary:hover
  cursor: pointer
  
.post-nav
  .nav-item
    height: 100vh
    position: fixed
    top: 0
    display: flex
    align-items: center
    font-size: 80px
    color: $gray
    // transition: all 350ms ease-in
    &:hover
      color: $gray-darker
      .nav-item-title
        display: block
      .icon-arrow-left,
      .nav-item-title-left
        transform: translateX(-0.5rem)
      .icon-arrow-right,
      .nav-item-title-right
        transform: translateX(.5rem)
    &-title
      position: absolute
      top: calc(50% - 8px)
      font-size: 12px
      line-height: 1rem
      width: 11rem
      position: absolute
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      display: none
      transition: all .2s ease-in
    &-title-left
      left: 75%
    &-title-right
      right: 75%
      text-align: right
    .icon-arrow-right,
    .icon-arrow-left
      transition: all .2s ease
  .prev
    left: 0
  .next
    right: 0
.index-nav__list
  display: inline-block
  width: 180px
  text-align: center
  position: relative
  background: transparent
  font-size: 1.5rem
  line-height: 50px
  height: 170px
  top: -50px
  .hidden
    visibility: hidden
  .index-nav__item
    position: absolute
    top: 54px
    left: 0
    width: 180px
    background: rgba(255, 255, 255, 1)
    line-height: 50px
    display: inline
    transition: top .2s
    > a
      display: block
      width: 100%
      height: 100%
      transition: scale .5s ease
      &:hover
        color: $highlight-title + 10%
        // transform: scale(1.2)
  &:hover .index-nav__item
    box-shadow: 0 0 1px 1px rgba(0, 0, 0, .075)
  &:hover .Diary
    top: -43px
    transform: perspective(125px) rotateX(25deg)
  &:hover .Slaughter
    top: 7px
    transform: perspective(125px) rotateX(-25deg)
  &:hover .Blog
    top: 50px
    transform: perspective(125px) rotateX(25deg)
  &:hover .Github
    top: 100.1px
    transform: perspective(125px) rotateX(-25deg)
  &:hover .About 
    top: 143px
    transform: perspective(125px) rotateX(25deg)

#back-to-top
    display: none
    position: fixed
    height: 80px
    right: 30px
    bottom: 20px
    transition-property: transform
    transition-timing-function: ease-out
    transition-duration: 0.3s
    z-index: 10
    font-size: 30px
    transform: rotateZ(-90deg)
    .icon-arrow-right
        text-shadow: 10px 0 0
    &:hover
        cursor: pointer
        transform: translateY(-5px) rotateZ(-90deg) 
