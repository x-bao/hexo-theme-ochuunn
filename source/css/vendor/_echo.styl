/*36/30/24/18/14*/
.echo
  font-size-rem(14)
  line-height: 1.5

  a
    color: $base-link-color

    &:hover, 
    &:focus, 
    &:active
      text-decoration: underline

  h1
  h2
  h3
  h4
  h5
  h6
    font-weight: normal
    line-height: 1.5
    margin: 1.1em 0
    margin-bottom: 0

  h1
    font-size-rem(30)

  h2
    font-size-rem(24)

  h3
    font-size-rem(18)

  h4
  h5
  h6
    font-size-rem(14)

  p
    margin: .5em 0
    font-size-rem(16)
    text-align: justify
    line-height: 1.6
    margin-top: 0

  address
  blockquote
  dl
  figure
  form
  hr
  img
  ol
  pre
  table
  ul
    margin: 1.6em 0

  hr
    margin: 1.6em auto
    width: 61%
    height: 4px
    border: none
    background: #eee

  img
    max-width: 100%
    height: auto

  caption
    text-transform: uppercase
    padding: 1em
    color: #777

  thead
    background-color: #eee

  td
  th
    border: 1px solid #cbcbcb
    padding: .4rem
    text-align: left
    font-weight: normal
  th
    font-weight: bold

  tfoot
    background-color: #f4f4f4

  dl
  ol
  ul
    margin-left: 2em

  dd
    margin-left: 1em

  ol
    list-style: decimal outside

  ul
    list-style: disc outside

  figcaption
    font-size: .85em

  blockquote small,
  cite
    color: #777

  abbr
    cursor: help

  address
    font-style: normal

  code
    background-color: hsla(0,0%,0%,0.04)
    border-radius: 3px
    font-family: "SFMono-Regular", Consolas,"Roboto Mono","Droid Sans Mono","Liberation Mono",Menlo,Courier,monospace
    padding: .1em .2em
    font-size: 1rem
    line-height: 1.5rem
    

  kbd
    @extend .echo code
    box-shadow: 0 1px 0px #CCCCCC, 0 0 0 2px #FFFFFF inset

  blockquote
    margin: 1.6em -50px
    padding: 10px 45px
    border-left: 8px solid $color-green
    border-right: 0
    border-top: 1px solid $border-color;
    border-bottom: 1px solid $border-color;
    background-color: #fefefe;

    &.right
      border-left: 0
      border-right: 8px solid $color-green
