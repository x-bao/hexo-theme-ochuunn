.highlight
  overflow: auto
  // background-color: $highlight-background
  color: $highlight-foreground
  border: 1px solid $border-color
  position: relative
  &:hover
    box-shadow: 0 1px 5px rgba(50,50,50,0.2);
  &::after
    position: absolute
    top: 3px
    right: 3px
    padding: 2px 7px
    font-size: .8rem
    font-weight: bold
    color: darken($gray, 10%)
    text-shadow: none
    content: 'Code'
    text-align: right

  for $sign, $text in $code-type-list {
    &.{$sign}::after {
      content: $text
    }
    // &.{$sign} > figcaption > span::after {
    //   content: ' Â· ' + $text
    // }
    // &.{$sign} figcaption + table {
    //   &::after {
    //     display: none
    //   }
    // }
  }

  .gutter
    color: #fff
    text-shadow: none
    background-color: $highlight-foreground
    width: 1em
    text-align: center

  .code
    padding: 15px

  figcaption
    margin-bottom: 1em
    color: #999
    font-size: .85em
    a
      float: right

  .comment
    color: $highlight-comment
    
  .title
    color: $highlight-title

  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: $highlight-green

  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: $highlight-orange

  .class
  .ruby .class .title
  .css .rules .attribute
    color: $highlight-green

  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: $highlight-green

  .css .hexcolor
    color: $highlight-aqua

  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: $highlight-func-keyword

  .keyword
  .javascript .function
    color: $highlight-purple

  .marked 
    background-color: #ffecec
